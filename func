                int sum = 0;
                for (int index = 0; index < 10; index++)
                {
                        System.out.println("enter numbers");
                        arrayuser[index] = s.nextInt();
                        sum = sum + arrayuser[index];
                        }
                double avg = sum / arrayuser.length;
                System.out.println(avg);
                }


